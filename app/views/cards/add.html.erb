<h1>Cards#add</h1>
<p>※登録する読書データを入力してください。</p>
<%= form_for(@card, url:{controller: 'cards', action:'add'}) do |form| %>
<table>
    <tr>
        <th>タイトル</th>
        <td><%= form.text_field :title, { size:40 } %></td>
    </tr>
    <tr>
        <th>著者</th>
        <td><%= form.text_field :author, { size:40 } %></td>
    </tr>
    <tr>
        <th>価格</th>
        <td><%= form.number_field :price, { size:10 } %></td>
    </tr>
    <tr>
        <th>出版社</th>
        <td><%= form.text_field :publisher, { size:40 } %></td>
    </tr>
    <tr>
        <th>コメント</th>
        <td><%= form.text_area :memo, { col:40, row:10 } %></td>
    </tr>
    <tr>
        <th>
        <td><%= form.submit "保存" %></td>
    </tr>
</table>
<% end %>
<p class="link"><a href="/cards">&lt;&lt;※トップページへ戻る</a></p>
